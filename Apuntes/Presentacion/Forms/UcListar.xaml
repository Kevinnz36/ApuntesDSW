<UserControl x:Class="Presentacion.Forms.UcListar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Presentacion.Forms"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="650" Background="#FF7C81AD">
    <Grid>
        <Label x:Name="lblTitulo" Content="Listado de tareas" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontFamily="Bahnschrift SemiBold" FontSize="16"/>
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,57,10,260" Background="#FF7C81AD" RowBackground="#FF7C81AD" AlternatingRowBackground="#FF7C81AD" BorderBrush="Black"/>

    </Grid>
</UserControl>
